<section>
    <h1><%- messages() %></h1>

    <h1><%- title  %></h1>

    <form id="vehicleForm" action="/inv/delete" method="post">
        <label for="make">Make:</label>
        <input type="text" id="make" name="inv_make" required value="<%- inv_make %>" readonly>
        
        <label for="model">Model:</label>
        <input type="text" id="model" name="inv_model" required value="<%- inv_model %>" readonly>
        
        <label for="year">Year:</label>
        <input type="number" id="year" name="inv_year" required value="<%- inv_year %>" readonly>
        
        <label for="description">Description:</label>
        <textarea id="description" name="inv_description" required readonly><%- inv_description %></textarea>
        
        <label for="price">Price:</label>
        <input type="number" id="price" name="inv_price" required value="<%- inv_price %>" readonly>
        
        <label for="color">Color:</label>
        <input type="text" id="color" name="inv_color" required value="<%- inv_color %>" readonly>
        
        <label for="miles">Miles:</label>
        <input type="number" id="miles" name="inv_miles" required value="<%- inv_miles %>" readonly>
        
        <label for="classification">Classification:</label>
        <%- classifications %>
        <input type="hidden" name="inv_id"
        <% if(inv_id) { %> value="<%- inv_id %>"
        <% } %>>

        <input type="hidden" name="inv_image"
        <% if(inv_image) { %> value="<%- inv_image %>"
        <% } %>>

        <input type="hidden" name="inv_thumbnail"
        <% if(inv_thumbnail) { %> value="<%- inv_thumbnail %>"
        <% } %>>

        <p>Confirm Deletion - The delete is permanent.</p>

        <button type="submit">Confirm Delete</button>
    </form>
</section>
