
<section>
    <h1><%- messages() %></h1>

    <form id="vehicleForm" action="/inv/add-inventory" method="POST">
        <label for="make">Make:</label>
        <input type="text" id="make" name="inv_make" required>
    
        <label for="model">Model:</label>
        <input type="text" id="model" name="inv_model" required>
    
        <label for="year">Year:</label>
        <input type="number" id="year" name="inv_year" required>
    
        <label for="description">Description:</label>
        <textarea id="description" name="inv_description" required></textarea>
        
        <label for="price">Price:</label>
        <input type="number" id="price" name="inv_price" required>
        
        <label for="color">Color:</label>
        <input type="text" id="color" name="inv_color" required>
        
        <label for="miles">Miles:</label>
        <input type="number" id="miles" name="inv_miles" required>
        
        <label for="classification">Classification:</label>
        <%- classifications %>

        <button type="submit">Add Vehicle</button>
    </form>
</section>